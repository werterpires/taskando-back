modules = ["nodejs-20"]
run = "npm run start:dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run start:dev"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NestJS Server"

[[workflows.workflow]]
name = "NestJS Server"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000
